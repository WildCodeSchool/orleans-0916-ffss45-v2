
        <div id="img-carousel" data-ride="carousel" class="carousel slide">
        <!-- Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#img-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#img-carousel" data-slide-to="1"></li>
            <li data-target="#img-carousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides-->
            {% if actualites %}
                <div role="listbox" class="carousel-inner">
                    {% for actualite in actualites %}
                        <div class="item
                            {% if loop.index == 1 %}
                              active
                            {% endif %}
                        ">
                            <img src="{{ asset('upload/' ~ actualite.image) }}" alt=""/>
                            <div class="carousel-caption">
                                <h2 class="animated fadeInDown">{{ actualite.titre }}</h2>
                                <p class="animated fadeInUp"><a href="{{ path('page_actualites') }}" class="btn btn-transparent btn-rounded btn-large">En savoir plus</a></p>
                            </div>
                        </div>
                   {% endfor %}
                </div>
            {% endif %}
        <!-- Controls-->
            <a href="#img-carousel" role="button" data-slide="prev" class="left carousel-control">
                <i aria-hidden="true" class="fa fa-chevron-left"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a href="#img-carousel" role="button" data-slide="next" class="right carousel-control">
                <i aria-hidden="true" class="fa fa-chevron-right"></i><span class="sr-only">Next</span>
            </a>
    </div>
