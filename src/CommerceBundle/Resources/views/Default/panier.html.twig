{% extends 'FrontBundle:Default:frontLayout.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row">
            <div class="span9">
                <h2>Votre panier</h2>
                {% if panier %}
                    <table class="table table-striped table-hover">


                        <thead>
                        <tr>
                            <th>Formation</th>
                            <th>Date</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Prix total</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>{% for item in panier %}
                            <td>
                                {{ item.formation }}
                            </td>
                            <td>{#Datedebute#}
                                Du {{ item.agenda.dateDeDebut |date('d-m-Y') }}
                                au {{ item.agenda.dateDeFin |date('d-m-Y') }}
                                {{ item.agenda.HeureDeDebutAm |date('H:i') }}
                                -{{ item.agenda.HeureDeFinAm |date('H:i') }} {{ item.agenda.HeureDeDebutPm |date('H:i') }}
                                -{{ item.agenda.HeureDeFinPm |date('H:i') }}
                            </td>
                            <td>{#quantité#}
                                {{ render(controller('CommerceBundle:Panier:quantityForm', {'id': item.agenda.id})) }}
                            </td>
                            <td>
                                {{ item.agenda.formation.prix }} €
                            </td>
                            <td>{#prix x quantité#}
                                {{ item.totalitem }} €
                            </td>
                            <td><a href="{{ path('remove', {'id': item.agenda.id}) }}"><img title="supprimer l'achat" style="width: 15px; height: 15px;" src="{{ asset('images/croix.png')}}"></a>
                            </td>
                            <td>
                            </td>
                        </tr>
                        {% endfor %}



                        </tbody>
                    </table>
                    <div class="row">


                    <div class="text-right">
                        {{ render(controller('CommerceBundle:Panier:livraisonForm')) }}
                    </div>
                    </div>
            <dl class="dl-horizontal pull-right">
                <dt>Total: {{ totalfinal }} € TTC</dt>
                <dd></dd>
            </dl>
            <div class="clearfix"></div>
            <a  href="{{path ('valid_cart')}}" class="btn btn-success pull-right">Valider mon panier</a>
            <a style="margin-right: 15px; " href="{{path ('empty_cart')}}" class="btn btn-danger pull-right">Vider mon panier</a>
            {% endif %}
            <a href="{{path ('page_accueil_principale')}}" class="btn btn-primary">S'inscrire à d'autres formations</a>

            </div>
        </div>
    </div>

    <script>
        $('.qtSelect').change(function () {
            $(this).parent('div').parent('div').parent('form').submit();
        });
        $('#form_livraison').change(function () {
            //console.log('aaa');
            $('#livraison').submit();
        });
    </script>


{% endblock %}