{% extends 'FrontBundle:Default:frontLayout.html.twig' %}

{% block stylesheet %}
    {{ parent }}
    <link rel="stylesheet" href="{{ asset('css/user.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page">
                    {#<div class="info">#}
                    <h1> Page utilisateur</h1>

                        <p>Vous êtes un :
                            {% if is_granted('ROLE_ADMIN') %}
                            <div class="row">
                                <div class="col-xs-6">
                                    <b>Admin</b>
                                </div>
                                    <div class="col-xs-6">
                                    <a href="{{ path('admin') }}"><i class="fa fa-lock" aria-hidden="true"></i></a>

                                </div>
                                {% endif %}

                            {% if is_granted('ROLE_USER') %}
                                <b>client</b>
                            {% endif %}
                        </p>
                        </div>





                        <p>Vos Informations</p>

                        <ul>
                            <li>Indentifiant : {{app.user.id}}</li>
                            <li>Pseudo : {{app.user.username}}</li>
                            <li>Nom : {{app.user.nom}}</li>
                            <li>Prénom : {{app.user.prenom}}</li>
                            <li>Adresse : {{app.user.adresse}}</li>
                           {# <li>age : {{app.user.age}}</li>#}
                            <li>Code Postal : {{app.user.codepostal}}</li>
                            <li>Ville : {{app.user.ville}}</li>
                            <li>Tel : {{app.user.tel}}</li>
                            <li>Mail : {{app.user.email}}</li>
                            <li>Comment avez vous connu l'association FFSS : {{app.user.relation}}</li>
                        </ul>

                        



                        <p><a href="{{ path('fos_user_security_logout') }}">se déconnecter</a> </p>
                        <p><a href="{{ path('fos_user_profile_edit') }}">Modifier ses informations</a> </p>
                    {#</div>#}
                </div>
            </div>
        </div>
    </div>

{% endblock %}