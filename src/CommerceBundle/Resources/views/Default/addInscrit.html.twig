{% set panier =  app.session.get('panier') %}
<dd>Inscrit #{{ key }}</dd>
{% if panier[id]['inscrits'][key]['nom'] is defined %}
    {{ panier[id]['inscrits'][key]['nom'] }}
    <a href="{{ path('edit_inscrit', {'id':id, 'key':key} ) }}">edit</a>
{% else %}
<div class="container" style="width: 50%;">
    {{ form_start(form, {'attr':{'id':'valid_inscrit' ~  key }, 'action':path('add_inscrit', {'id':id, 'key':key})}) }}
        <dl>{{form_label(form.nom, 'nom')}}
            {{form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
            {{form_errors(form.nom)}}

            {{form_label(form.prenom, 'prenom')}}
            {{form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
            {{form_errors(form.prenom)}}

            {{form_label(form.email, 'email')}}
            {{form_widget(form.email, {'attr':{'class':'form-control'}}) }}
            {{form_errors(form.email)}}
            {% if key==1 %}
                <a href="{{ path('user_inscrit', {'id':id} ) }}">pour moi</a>
            {% endif %}
    {{ form_end(form) }}</dl>
    <div>
{% endif %}

