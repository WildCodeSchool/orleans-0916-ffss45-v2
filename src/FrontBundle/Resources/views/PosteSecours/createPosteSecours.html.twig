{% extends '@Front/Default/frontLayout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/posteSecours.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}Demander un poste de secours{% endblock %}
{% block body %}
    <div class="container-fluid poste">
        <div class="row">
            <h1 class="debut_page">Demander un poste de secours</h1>
            <div class="col-xs-12">
				{{ form_start(form) }}
					{{ form_errors(form) }}
				{% if flow.getCurrentStepNumber() == 1 %}
					<fieldset>
					{{ form_row(form.nomManif) }}
					{{ form_row(form.PresentationManif) }}
					</fieldset>
					<fieldset>
						{{ form_label(form.dateDebutManif) }}
						{{ form_widget(form.dateDebutManif) }}
						{{ form_widget(form.heureDebutManif) }}
					</fieldset>
					<fieldset>
						{{ form_label(form.dateFinManif) }}
						{{ form_widget(form.dateFinManif) }}
						{{ form_widget(form.heureFinManif) }}
					</fieldset>
				
					<fieldset>
						{{ form_row(form.adresseManif) }}
						{{ form_row(form.villeManif) }}
						{{ form_row(form.pompiersLieu) }}
						{{ form_row(form.urgencesLieu) }}
					</fieldset>
					<fieldset>
						{{ form_row(form.raisonSociale) }}
						{{ form_row(form.nomRep) }}
						{{ form_row(form.telRep) }}
						{{ form_row(form.mailRep) }}
			
					</fieldset>
					<fieldset>
						{{ form_row(form.nomChef) }}
						{{ form_row(form.telChef) }}
						{{ form_row(form.mailChef) }}
					</fieldset>
					{{ form_row(form.siteWeb) }}
					{{ form_row(form.typeManif) }}
					{% endif %}

				{{ form_rest(form) }}
					{% include 'CraueFormFlowBundle:FormFlow:buttons.html.twig' with {
						craue_formflow_button_label_finish: 'Envoyer',
						craue_formflow_button_label_next: 'Suivant',
						craue_formflow_button_label_finish: 'Terminer',
						craue_formflow_button_label_back: 'Précédent',
						craue_formflow_button_class_reset: 'hidden-xs hidden-md hidden-sm hidden-lg',
						craue_formflow_button_class_back: 'pull-left',
					} %}

				{{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
