<!-- Mixins-->
<!-- Pen Title-->
<head>

    <style>
       label {
           padding-bottom: 28px;
       }
    </style>

</head>


<link href="{{ asset('css/login.css') }}" rel="stylesheet">
<div class="pen-title">
    <h1>Bienvenue</h1>
    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

</div>

<div class="container">


    <div class=" hidden card"></div>
    <div class="card">
        <h1 class="title">Je possède un espace personnel</h1>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <form>
                <div class="input-container">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    <label for="Username">{{ 'security.login.username'|trans }}</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input type="password" id="password" name="_password" required="required"/>
                    <label for="Password">{{ 'security.login.password'|trans }}</label>
                    <div class="bar"></div>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <div class="button-container">
                            <input href="{{ path('user_info') }}" class="btn-primary btn
                                btn-lg" type="submit" id="_submit" name="_submit"
                                   value="{{ 'security.login.submit'|trans }}"/>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="button-container">
                            <a class="btn-primary btn btn-lg" type="submit" href="{{ path
                            ('fos_user_registration_register') }}">Créer un compte</a>
                        </div>
                        <br/>
                    </div>
                </div>
                <div class="footer">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label style="color:black;" for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br/>


                    <a style="color:black;" href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a>

                </div>
            </form>
        </form>
    </div>

</div>
{% block javascript %}
<script>
    $('.toggle').on('click', function() {
        $('.container').stop().addClass('active');
    });
$('.close').on('click', function() {
    $('.container').stop().removeClass('active');
});
</script>
{% endblock %}