{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<center>
    <div style="width: 35%; margin-top: 25px;">
        <h1>Création de Compte</h1>

        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


        <div class="form-group">
            {{ form_errors(form.email) }}
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.username) }}
            {{ form_label(form.username, 'Identifiant utilisateur') }}
            {{ form_widget(form.username, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.nom) }}
            {{ form_label(form.nom, 'Nom') }}
            {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.prenom) }}
            {{ form_label(form.prenom, 'Prenom') }}
            {{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.date_naissance) }}
            {{ form_label(form.date_naissance, 'Date de naissance (ex: 1990-12-01)') }}
            {{ form_widget(form.date_naissance) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.lieu_naissance) }}
            {{ form_label(form.lieu_naissance, 'Lieu de naissance') }}
            {{ form_widget(form.lieu_naissance, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.departement_naissance) }}
            {{ form_label(form.departement_naissance, 'Département de naissance') }}
            {{ form_widget(form.departement_naissance, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">


            {{ form_errors(form.adresse) }}
            {{ form_label(form.adresse, 'Adresse') }}
            {{ form_widget(form.adresse, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.code_postal) }}
            {{ form_label(form.code_postal, 'Code postal') }}
            {{ form_widget(form.code_postal, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.ville) }}
            {{ form_label(form.ville, 'Ville') }}
            {{ form_widget(form.ville, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.tel) }}
            {{ form_label(form.tel, 'Téléphone') }}
            {{ form_widget(form.tel, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">

            {{ form_errors(form.relation) }}
            {{ form_label(form.relation, 'Comment avez vous connu FFSS ?') }}
            {{ form_widget(form.relation, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">

            {{ form_label(form.plainPassword, 'Mot de passe') }}<br/>
            {{ form_widget (form.plainPassword.children['first'],  { 'attr': {'class': "span12",
                'placeholder': "Mot de passe"} }) }}

            {{ form_widget (form.plainPassword.children['second'], { 'attr': {'class': "span12",
                'placeholder': "Confimation mot de passe"} }) }}
        </div>
        <div class="form-group">

            {{ form_label(form.imageFile, 'Carte d\'identité') }}
            {{ form_widget(form.imageFile, {'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>


    </div>

    <div class="row">
        <div class="col-sm-offset-4 col-sm-4">
            <input class="btn btn-success btn-block btn-lg" type="submit" value="{{ 'registration.submit'|trans }}"/>
        </div>
    </div>
    <br/>
    <br/>
    <br/>
    {{ form_end(form) }}

</center>