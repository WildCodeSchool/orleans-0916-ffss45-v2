{% extends 'AdminBundle::adminLayout.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Liste des paiements en attente
        </h1>
        <a class="btn btn-primary btn-lg" href="{{ path('payment_index') }}">Voir tous les paiements</a>
        <table class="table table-hover table-condensed table-striped">
            <thead>
            <tr>
                <th>Numero Commande</th>
                <th>Statut</th>
                <th>Type paiement</th>
                <th>Utilisateur</th>
                <th>Prix</th>
                <th>Infos</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.numeroReservation }}</a></td>
                    <td>
                        {% if payment.paid %}
                            Payé
                        {% else %}
                            En attente de paiement
                        {% endif %}
                    </td>
                    <td>{{ payment.type }}</td>
                    <td>{{ payment.user.prenom }} {{ payment.user.nom }}</td>
                    <td>{{ payment.price }}€</td>
                    <td>{{ payment.information }}</td>
                    <td>
                        {% if payment.paid  is null %}

                        <a class="btn btn-success" href="{{ path('payment_validation', { 'id': payment.id }) }}">Valider le paiement</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
