{% extends 'AdminBundle::adminLayout.html.twig' %}

{% block body %}
<div class="container">
    <h1>Liste des actualités
    </h1>
    <table class="table table-hover table-condensed table-striped">
        <thead>
        <tr>
            <th>id</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Auteur</th>
            <th>Date</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td><a href="{{ path('actualite_show', { 'id': actualite.id }) }}">{{ actualite.id }}</a></td>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.contenu }}</td>
                <td>{{ actualite.auteur }}</td>
                <td>{% if actualite.date %}{{ actualite.date|date('Y-m-d') }}{% endif %}</td>
                <td class="text-left">{% if actualite.image %}<img src="{{ asset('upload/' ~ actualite.image) }} " class="img-responsive" alt=""/>{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actualite_show', { 'id': actualite.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('actualite_edit', { 'id': actualite.id }) }}">mettre à jour</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actualite_new') }}">Créer une actualité</a>
        </li>
    </ul>
{% endblock %}
