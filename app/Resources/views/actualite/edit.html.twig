{% extends 'AdminBundle::adminLayout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="container-fluid edit-formation">
        <h1>Mise à jour de l'actualité {{ actualite.titre }}</h1>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <input class="btn btn-info  btn-lg btn-block" type="submit" value="Edit" />
            </div>
        </div>
        {{ form_end(edit_form) }}



        {{ form_start(delete_form) }}
        <input class="btn btn-danger pull-right" type="submit" value="Delete">
        {{ form_end(delete_form) }}
        <a class="btn btn-primary btn-sm" href="{{ path('actualite_index') }}">Retour aux actualités</a>

    </div>


<script> $(document).ready(function() {
        $('#actualite_titre, #actualite_contenu, #actualite_auteur').summernote();
    });</script>
{% endblock %}