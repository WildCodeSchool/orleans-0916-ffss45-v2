{% extends 'AdminBundle::adminLayout.html.twig' %}

{% block body %}
    <h1>Inscription</h1>
    <div class="container">
        <div class="row">


            <table class="table table-condensed table-hover table-striped table-responsive">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ reservation.user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ reservation.user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Date de Naissance</th>
                        <td>{{ reservation.user.dateNaissance|date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ reservation.user.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Lieu de Naissance</th>
                        <td>{{ reservation.user.lieuNaissance }}</td>
                    </tr>
                    <tr>
                        <th>Departement de Naissance</th>
                        <td>{{ reservation.user.departementNaissance }}</td>
                    </tr>
                    <tr>
                        <th>Code Postal</th>
                        <td>{{ reservation.user.codePostal }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ reservation.user.ville }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ reservation.user.tel }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ reservation.status }}</td>
                    </tr>
                    <tr>
                        <th>Carte d'identité</th>
                        <td>{% if reservation.user.imageName %}<img style="width: 75px;" class="smallPic" src="{{ asset('upload/identite/'~reservation.user.imageName) }}" alt="{{ user.titre }}"/>{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Diplôme</th>
                        <td>{% if reservation.imageName %}<img style="width: 75px;" class="smallPic" src="{{ asset('upload/diplome/'~reservation.imageName) }}" alt="{{ img.titre }}"/>{% endif %}</td>

                    </tr>

                    {#<tr>#}
                        {#<th>Image</th>#}
                        {#<td><img class="imgInscription" src="{{ asset(webPath) }}" alt="{{ alt }}"/></td>#}
                    {#</tr>#}
                </tbody>
            </table>

        <div class="col-xs-4">
            <a class="btn btn-primary" href="{{ path('reservation_agenda_index', { 'id': reservation.agenda.id }) }}">Retour à la
                liste</a>
        </div>
        <div class="col-xs-4">
            <a class="btn btn-success" href="{{ path('reservation_edit', { 'id': reservation.id }) }}">Editer</a>
        </div>
        <div class="col-xs-4">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>


    </div>
    </div>
{% endblock %}
