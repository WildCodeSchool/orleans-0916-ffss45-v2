{% extends 'AdminBundle::adminLayout.html.twig' %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <h1>Mise à jour demande de Poste de Secours</h1>
    <h2>{{ formulaireSecours.nomManif }} du {{ formulaireSecours.dateDebutManif | date('d m Y') }}
        par {{ formulaireSecours.user.prenom }} {{ formulaireSecours.user.nom }}
        <a class="btn btn-info" href="{{ path('formulairesecours_show', { 'id': formulaireSecour.id }) }}">
            Detail de la demande
        </a>
        <a class="btn btn-info" href="{{ path('formulaire_edit', { 'id': formulaireSecour.id }) }}">
            Editer la demande
        </a>
    </h2>
    <div class="container-fluid">
        {{ form_start(edit_form) }}
        {{ form_row(edit_form.devis) }}
        {{ form_row(edit_form.statut) }}
        {{ form_row(edit_form.message) }}
        <div class="hidden">
            {{ form_widget(edit_form) }}
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <input class="btn btn-success btn-lg btn-block" type="submit" value="Enregistrer le devis"/>
            </div>
        </div>
        {{ form_end(edit_form) }}

        <hr/>
        <a class="btn btn-primary " href="{{ path('formulairesecours_index') }}">Retour à la liste</a>
        <div class="pull-right">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
